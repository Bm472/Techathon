<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.co.robertwalters.techathon.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Finova">
      <font>
         <Font size="36.0" />
      </font>
   </Label>
    <HBox spacing="10.0">
        <Label text="Username"></Label>
        <TextField fx:id="username"/>
    </HBox>
    <HBox spacing="13.0">
        <Label text="Password" ></Label>
        <PasswordField fx:id="password" />
    </HBox>
    <Button onAction="#onLoginButtonClick" text="Log In" />
    <Button onAction="#onRegisterButtonClick" text="Register" />
    <Label fx:id="errorMessage" style="color:red" visible="false" />
</VBox>
