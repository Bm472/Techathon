<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import eu.hansolo.tilesfx.Tile?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.co.robertwalters.techathon.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Finova">
      <font>
         <Font size="72.0" />
      </font>
   </Label>
    <HBox alignment="CENTER" spacing="10.0">
        <Label text="Username" />
        <TextField fx:id="username" />
    </HBox>
    <HBox alignment="CENTER" spacing="13.0">
        <Label text="Password" />
        <PasswordField fx:id="password" />
    </HBox>
    <Label fx:id="errorMessage" style="color:red" textFill="RED" visible="false" />
    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#onLoginButtonClick" text="Log In" />
        <Button onAction="#onRegisterButtonClick" text="Register" />
    </HBox>
</VBox>
